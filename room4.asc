function oLlave_Interact(Object *theObject, CursorMode mode)
{
  cSatsuki.Walk(oLlave.X, oLlave.Y, eBlock); 
  oLlave.Visible = false;
  cSatsuki.AddInventory(iLlave);
}

function oPalo_Interact(Object *theObject, CursorMode mode)
{
