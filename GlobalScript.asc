function bMochila_OnClick(GUIControl *control, MouseButton button)
{
  if (gInv.Visible == false)
  {
    gInv.Visible = true;
    gMochila.Visible = false;
    }else{
    gInv.Visible = false; 
    gMochila.Visible = true;    
  }
}

function Exit_OnClick(GUIControl *control, MouseButton button)
{
  gInv.Visible = false;
  gMochila.Visible = true;
}

